<h1>Productos</h1>

<ul>
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong> - ${{this.price}}

      <!-- Ver detalles -->
      <a href="/products/{{this.id}}">Ver detalles</a>

      <!-- Agregar al carrito -->
      <button onclick="addToCart({{this.id}})">Agregar al carrito</button>
    </li>
  {{/each}}
</ul>

<div>
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}">Anterior</a>
  {{/if}}

  <span>PÃ¡gina {{currentPage}}</span>

  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}">Siguiente</a>
  {{/if}}
</div>

<script>
  async function addToCart(pid) {
    const cartId = 1;

    const res = await fetch(`/api/carts/${cartId}/product/${pid}`, {
      method: "POST"
    });

    const data = await res.json();
    alert(data.message);
  }
</script>
